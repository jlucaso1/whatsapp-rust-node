{
  "name": "whatsapp-rust-node",
  "version": "0.1.0",
  "description": "WhatsApp bot library for Node.js powered by Rust",
  "type": "module",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.js"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "index.node"
  ],
  "scripts": {
    "build": "napi build --release",
    "build:debug": "napi build",
    "typecheck": "tsc --noEmit",
    "example": "bun examples/basic.ts",
    "prepublishOnly": "npm run build"
  },
  "napi": {
    "binaryName": "index"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "rust",
    "napi",
    "native"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3"
  }
}
